# Database connection URL
# Example: postgresql://username:password@localhost:5432/database_name
DATABASE_URL="postgresql://user:password@localhost:5432/zigzag_db"

# Prisma ORM Key (if needed for authentication)
PRISMA_ORM_KEY="your-prisma-key-here"

# ===========================================
# BLOCKCHAIN / WEB3 CONFIGURATION
# ===========================================

# Ethereum RPC URL (Mainnet)
# Get from: https://infura.io or https://alchemy.com
ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID"

# Polygon RPC URL (for lower gas fees)
# Get from: https://alchemy.com or https://polygon-rpc.com
POLYGON_RPC_URL="https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY"

# Wallet private key for server-side minting (KEEP SECRET!)
# Export from MetaMask: Account Details > Export Private Key
MINTER_PRIVATE_KEY="your-private-key-here"

# Deployed NFT Contract Address
NFT_CONTRACT_ADDRESS="0x_YOUR_DEPLOYED_CONTRACT_ADDRESS"

# Etherscan API Key (for contract verification)
# Get from: https://etherscan.io/apis
ETHERSCAN_API_KEY="your-etherscan-api-key"

# ===========================================
# INFURA CONFIGURATION
# ===========================================

# Infura Project ID
# Get from: https://infura.io/dashboard
INFURA_PROJECT_ID="your-infura-project-id"

# Infura Project Secret
INFURA_PROJECT_SECRET="your-infura-project-secret"

# ===========================================
# ALCHEMY CONFIGURATION
# ===========================================

# Alchemy API Key
# Get from: https://dashboard.alchemy.com
ALCHEMY_API_KEY="your-alchemy-api-key"

# ===========================================
# IPFS / NFT STORAGE
# ===========================================

# NFT.Storage API Key (for IPFS pinning)
# Get from: https://nft.storage
NFT_STORAGE_API_KEY="your-nft-storage-api-key"

# Pinata API Keys (alternative IPFS)
# Get from: https://pinata.cloud
PINATA_API_KEY="your-pinata-api-key"
PINATA_SECRET_KEY="your-pinata-secret-key"

# ===========================================
# OPENSEA CONFIGURATION
# ===========================================

# OpenSea API Key
# Get from: https://docs.opensea.io/reference/api-keys
OPENSEA_API_KEY="your-opensea-api-key"

# ===========================================
# MUSIC / STREAMING APIS
# ===========================================

# Spotify API (for music integration)
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID="your-spotify-client-id"
SPOTIFY_CLIENT_SECRET="your-spotify-client-secret"

# SoundCloud API
# Get from: https://developers.soundcloud.com
SOUNDCLOUD_CLIENT_ID="your-soundcloud-client-id"

# ===========================================
# SOCIAL MEDIA APIS
# ===========================================

# Twitter/X API
# Get from: https://developer.twitter.com
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"
TWITTER_BEARER_TOKEN="your-twitter-bearer-token"

# Instagram Basic Display API
# Get from: https://developers.facebook.com
INSTAGRAM_APP_ID="your-instagram-app-id"
INSTAGRAM_APP_SECRET="your-instagram-app-secret"

# ===========================================
# PAYMENT PROCESSING
# ===========================================

# Stripe API Keys (for fiat payments)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_live_your-stripe-secret-key"

# ===========================================
# EMAIL / NOTIFICATIONS
# ===========================================

# SendGrid API Key (for email notifications)
# Get from: https://sendgrid.com
SENDGRID_API_KEY="your-sendgrid-api-key"

# ===========================================
# ANALYTICS
# ===========================================

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Application URL
NEXT_PUBLIC_APP_URL="https://zigzag.com"

# Environment
NODE_ENV="production"
